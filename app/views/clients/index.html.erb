<div style="text-align:center;">
  <p id="notice"><%= notice %></p>

  <h1 style="color: #33bfc8; padding:15px; font-size:32px;">Listado de Usuarios</h1>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <table class="table">
        <thead >
          <tr>
            <th style="text-align:center;">Correo</th>
            <th style="text-align:center;">Api Key</th>
            <th style="text-align:center;">Num de Requests</th>
            <th colspan="4"></th>
          </tr>
        </thead>

        <tbody>
          <% @clients.each do |client| %>
            <tr>
              <td><%= client.email %></td>
              <td><%= client.key %></td>
              <td><%= client.count %></td>
              <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>    
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
